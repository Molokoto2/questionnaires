{
  "version": 2,
  "builds": [
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "*.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.css",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/", "dest": "/index.html" },
    { "src": "/creation", "dest": "/creation.html" },
    { "src": "/repondre", "dest": "/repondre.html" },
    { "src": "/results", "dest": "/results.html" }
  ]
}
